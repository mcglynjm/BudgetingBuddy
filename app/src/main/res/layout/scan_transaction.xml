<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/manual_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manual_transaction_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_manual_transaction"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount_colon"
        android:padding="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/amount_edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dollar_sign"
        android:padding="20dp"
        android:inputType="number"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_colon"
        android:padding="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/type_edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type"
        android:padding="20dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/items_optional_colon"
        android:padding="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/item_edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/items"
        android:padding="20dp"
        android:textColor="@color/gray"
        />


    <RelativeLayout
        android:id="@+id/renew_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        </LinearLayout>

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_below="@id/renew_col2"
            android:layout_toLeftOf="@id/ok_button"
            android:textSize="20sp"
            android:textColor="@color/teal_700"
            />

        <TextView
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_below="@id/renew_col2"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/teal_700"

            />

    </RelativeLayout>
</LinearLayout>